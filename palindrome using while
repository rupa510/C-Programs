#include<stdio.h>
void main()
{
    int n,rem,rev=0,s;
    printf("enter a num:");
    scanf("%d",&n);
    s=n;
    while(n>0)
    {
        rem=n%10;
        rev=rev*10+rem;
        n=n/10;
    }
 if(rev==s)
 {
     printf("the given num is palindrome");
 }
 else
 {
     printf("the given num is not palindrome");
 }
}
